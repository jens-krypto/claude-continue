# Claude Continue Configuration
# Copy this to claudecontinue.config.local and add your API keys

[deepseek]
# DeepSeek API for answering questions and auto follow-up
# Get your key at https://platform.deepseek.com/
api_key =
base_url = https://api.deepseek.com/v1
model = deepseek-chat
max_tokens = 500
temperature = 0.7

[rate_limits]
# Maximum DeepSeek API calls per hour
deepseek_calls_per_hour = 5

[behavior]
# Use DeepSeek for these features (requires api_key)
use_deepseek_for_questions = true
use_deepseek_for_followup = true
